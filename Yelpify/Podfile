pod 'Alamofire'
pod 'HanekeSwift', :git => 'https://github.com/beta-uy/HanekeSwift.git', :branch => 'feature/swift-3'
pod 'GoogleMaps'
pod 'GooglePlaces'
pod 'FBSDKCoreKit'
pod 'FBSDKLoginKit'
pod 'XLPagerTabStrip'
pod 'XLActionController'
pod 'Cosmos'
#pod 'DGElasticPullToRefresh'
#pod 'RAMAnimatedTabBarController'
